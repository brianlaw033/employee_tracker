<div class='panel panel-info'>
  <div class="panel-heading">
    <h3 class="panel-title" style='height: 40px;'>
      <a href="/">
        <button class='btn btn-primary' style='float: left; margin-right: 10px;'>
          <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        </button>
      </a>
      <form action="/update/division/<%=@division.id%>" method="post" style='float: left;'>
        <input type="hidden" name="_method" value="patch">
        Division:
        <input name ='name' type='text' value='<%= @division.name %>' style='color: black;'/>
        <button tyep='submit' class='btn btn-warning'>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button></a>
      </form>
      <form action="/delete/division/<%=@division.id%>" method="post" style='float: right;'>
        <input type="hidden" name="_method" value="delete">
        <button type='submit' class='btn btn-danger'>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </button>
      </form>
    </h3>
  </div>
  <div class="panel-body">

    <form action="/division_employee/<%=@division.id%>" method="post">
      <input name="_method" type="hidden" value="patch">
      Add Employee:
      <select id='employee_id' name='employee_id' type='text'>
        <% @all_employees.each() do |employee| %>
          <option value="<%= employee.id()%>"> <%= employee.name() %> </option>
          <% end %>
      </select>
      <button class="btn btn-success"type="submit">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </button>
    </form>

    <form action="/new/employee/<%=@division.id%>" method="post">
      Employee:
      <input id='name' name='name' type = 'text' />
      <button class='btn btn-success' type="submit">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </button>
    </form>

    <% if @employees.any?() %>
      <ul class='list-unstyled'>
        <% @employees.each do |employee| %>
          <li><a href="/employees/<%= employee.id() %>"><%= employee.name() %></a></li>
        <% end %>
      </ul>
    <% else %>
      <h3>None</h3>
    <% end %>

  </div>
</div>
