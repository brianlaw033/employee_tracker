<div class='panel panel-info'>
  <div class="panel-heading">
    <h3 class="panel-title" style='height: 40px;'>
      <a href="/">
        <button class='btn btn-primary' style='float: left;margin-right: 10px;'>
          <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        </button>
      </a>
      <form action="/update/employee/<%=@employee.id%>" method="post" style='float: left;'>
        <input type="hidden" name="_method" value="patch">
        Employee:
        <input name ='name' type='text' value='<%= @employee.name %>' style='color: black;'/>
        <button tyep='submit' class='btn btn-warning'>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button></a>
      </form>
      <form action="/delete/employee/<%=@employee.id%>" method="post" style='float: right;'>
        <input type="hidden" name="_method" value="delete">
        <button type='submit' class='btn btn-danger'>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </button>
      </form>
    </h3>
  </div>
  <div class="panel-body">
    Division: <%= @division.name %><br />
    <% if @project%>
      Project: <%= @project.name %>
    <% else %>
    <form action="/projects_employee/<%=@employee.id%>" method="post">
      <input name="_method" type="hidden" value="patch">
      Add Project:
      <select id='project_id' name='project_id' type='text'>
        <% @projects.each() do |project| %>
          <option value="<%= project.id()%>"> <%= project.name() %> </option>
          <% end %>
      </select>
      <button class="btn btn-success"type="submit">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </button>
    </form>
    <%end%>
  </div>
</div>
