    </h3>
  </div>
  <div class="panel-body">
    <% if @employees.any?() %>
      <ul class='list-unstyled'>
        <% @employees.each do |employee| %>
          <li><a href="/employees/<%= employee.id() %>"><%= employee.name() %></a></li>
        <% end %>
      </ul>
    <% else %>
      <h3>None</h3>
    <% end %>
  </div>
</div>
