<div class='col-sm-12'>
  <div class='panel panel-info col-sm-6'>
    <div class="panel-heading">
      <h3 class="panel-title text-center">
        Division
      </h3>
    </div>
    <div class="panel-body">
      <form action="/new/division" method="post">
        Division:
        <input id='name' name='name' type = 'text' />
        <button class='btn btn-success' id ='addDivision' type="submit">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
      </form>
      <% if @divisions.any?() %>
        <ul class='list-unstyled'>
          <% @divisions.each do |division| %>
            <li><a href="/divisions/<%= division.id() %>"><%= division.name() %></a></li>
          <% end %>
        </ul>
      <% else %>
        <h3>None</h3>
      <% end %>
    </div>
  </div>

  <div class='panel panel-info col-sm-6'>
    <div class="panel-heading">
      <h3 class="panel-title text-center">
        Projects
      </h3>
    </div>
    <div class="panel-body">
      <form action="/new/project" method="post">
        Project:
        <input id='name' name='name' type = 'text' />
        <button class='btn btn-success' type="submit">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
      </form>
      <% if @projects.any?() %>
        <ul class='list-unstyled'>
          <% @projects.each do |project| %>
            <li><a href="/projects/<%= project.id() %>"><%= project.name() %></a></li>
          <% end %>
        </ul>
      <% else %>
        <h3>None</h3>
      <% end %>
    </div>
  </div>
</div>


<div class='panel panel-info col-sm-6'>
